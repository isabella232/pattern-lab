<header class="c-main-header js-this {{ main_header_classes }} {{ is_stationary ? 'c-main-header--stationary' }}">

  {% if has_ad %}
    <div class="c-main-header__ad-unit">
      {% include 'molecules-leaderboard' %}
    </div>
  {% endif %}

  <div class="c-main-header__inner js-stop-prop">

    {% include '@organisms/global/side-menu.twig' %}

    {% block header_type %}
      {% include 'molecules-header-meta' %}
    {% endblock %}

    <div class="c-content-overlay"></div>
  </div>

  {% if has_progress_bar %}
    {% include 'molecules-progress-bar' %}
  {% endif %}

</header>
