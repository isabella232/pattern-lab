<div class="c-block {{ block_classes }}">

  {% block block_media %}
    {% if block_media %}
      <div class="c-block__media">

        <a href="">
          {% include '@atoms/images/picture.twig' with block_media %}
        </a>

      </div>
    {% endif %}
  {% endblock %}

  {% block block_object %}
    <div class="c-block__object u-spacing--half">

      {% if rubric %}
        <div class="c-block__eyebrow">
          {% include '@atoms/text/rubric.twig' %}
        </div>
      {% endif %}

      <h2 class="c-block__title"><a class="c-block__title-link" href="">{{ block_title }}</a></h2>

    </div>
  {% endblock %}

</div>
