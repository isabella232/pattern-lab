<div class="u-spacing--quad">
  <div class="c-welcome-page">
    <div class="c-welcome-page__logo"><img src="/images/radial-assets/radial-logo.svg" alt="Radial Design System"></div>
  </div>

  <div class="c-style-guide u-spacing--triple">
    <div class="l-container l-wrap">
      <section class="o-sg-section u-spacing--quad">
        <div class="u-spacing--double">
          <header class="o-sg-section__header l-container--content u-spacing">
            <h2 class="o-sg-section__heading">Theme Colors</h2>
            <p>No bullshit, scrappy, funny. Nothing is too lowbrow or weird, reader supported, Batman justice, for Foodies. Longer/Better description TBD</p>
          </header>
          <div class="o-sg-section__content u-spacing--and-half l-container l-container--14col">
            <div class="l-grid l-grid--3up">
              {% for item in primary_colors %}
                <div class="c-swatch">
                  <div class="c-swatch__color" style="background-color: {{ item.color_value }}">
                    <div class="c-swatch-a11y">
                      <div class="c-swatch-a11y__item">
                        <span class="c-swatch-a11y__letter">A</span>
                        <span class="c-swatch-a11y__check">{% include 'atoms-icon-check' %}</span>
                      </div>
                      <div class="c-swatch-a11y__item">
                        <span class="c-swatch-a11y__letter c-swatch-a11y__letter--bg" style="color: {{ item.color_value }}">A</span>
                        <span class="c-swatch-a11y__check">{% include 'atoms-icon-check' %}</span>
                      </div>
                    </div>
                  </div>
                  <div class="c-swatch__details">
                    <p>{{ item.color_priority }}</p>
                    <p>{{ item.color_name }}</p>
                    <p>{{ item.color_value }}</p>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="l-grid l-grid--4up">
              {% for item in secondary_colors %}
                <div class="c-swatch">
                  <div class="c-swatch__color" style="background-color: {{ item.color_value }}"></div>
                  <div class="c-swatch__details">
                    <p>{{ item.color_priority }}</p>
                    <p>{{ item.color_name }}</p>
                    <p>{{ item.color_value }}</p>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
        <div class="o-sg-section__content u-spacing--and-half l-container--content">
          <h3 class="o-sg-section__heading"><strong>Neutral Colors</strong></h3>
          <div class="c-color-bars">
            {% for item in neutral_colors %}
              <div class="c-color-bar" style="background-color: {{ item.color_value }}">
                <p {{ item.is_reversed_out ? 'style="color: white;"' }}>{{ item.color_name }}</p>
                <p {{ item.is_reversed_out ? 'style="color: white;"' }}>{{ item.color_value }}</p>
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="o-sg-section__content u-spacing--and-half l-container--content">
          <h3 class="o-sg-section__heading"><strong>Default Colors</strong></h3>
          <div class="c-color-bars">
            {% for item in default_colors %}
              <div class="c-color-bar" style="background-color: {{ item.color_value }}">
                <p {{ item.is_reversed_out ? 'style="color: white;"' }}>{{ item.color_name }}</p>
                <p {{ item.is_reversed_out ? 'style="color: white;"' }}>{{ item.color_value }}</p>
              </div>
            {% endfor %}
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
